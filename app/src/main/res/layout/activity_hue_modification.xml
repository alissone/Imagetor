<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:textOff=""
        android:textOn=""
        android:background="?attr/selectableItemBackgroundBorderless"
        android:button="@drawable/toggle_button_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/originalImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="Original Image" />

        <ImageView
            android:id="@+id/modifiedImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:contentDescription="Modified Image" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/brightnessSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturation"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/saturationSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrast"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/contrastSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hue"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/hueSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shadow"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/shadowSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White Balance"
        android:layout_gravity="center_horizontal"/>

    <SeekBar
        android:id="@+id/whiteBalanceSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="200"
        android:progress="100"/>

<!--    <ImageView-->
<!--        android:id="@+id/imageView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        android:scaleType="fitCenter"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Image"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/saveImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Image"
            android:layout_marginStart="8dp" />
    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Main content -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Secondary Bottom Bar (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/secondary_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:visibility="visible"
            android:background="?attr/colorSurface"
            android:orientation="horizontal"
            android:elevation="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_option1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/baseline_auto_fix_off_24" />

                <TextView
                    android:id="@+id/text_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brightness"
                    android:textSize="10sp"
                    android:gravity="center" />
            </LinearLayout>


            <Button
                android:id="@+id/btn_option2"
                android:layout_width="16dp"
                android:layout_weight="1"
                android:drawableTop="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:text="Contrast"/>

            <Button
                android:id="@+id/btn_option3"
                android:layout_width="16dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:text=""/>

            <Button
                android:id="@+id/btn_option4"
                android:layout_width="16dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:text=""/>
            <Button
                android:id="@+id/btn_option5"
                android:layout_width="16dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:text=""/>

            <Button
                android:id="@+id/btn_option6"
                android:layout_width="16dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

